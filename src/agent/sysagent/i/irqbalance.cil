(block irqbalance

       (blockinherit .sys.agent.template)

       (call conf.read_file_files (subj))

       (call run.manage_file_dirs (subj))
       (call run.run_file_type_transition_file (subj))

       (call .rbacsep.constrained.type (subj))
       (call .rbacsep.usefdsource.type (subj))

       (call .run.deletename_file_dirs (subj))

       (block conf

	      (filecon "/etc/sysconfig/irqbalance" file file_context)
	      (filecon "/etc/sysconfig/irqbalance\..*" file file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file file "irqbalance")))

	      (blockinherit .file.conf.base_template)
	      (blockinherit .file.macro_template_files))

       (block exec

	      (filecon "/usr/bin/irqbalance" file file_context))

       (block run

	      (filecon "/run/irqbalance" dir file_context)
	      (filecon "/run/irqbalance/.*" any file_context)

	      (macro run_file_type_transition_file ((type ARG1))
		     (call .run.file_type_transition
			   (ARG1 file dir "irqbalance")))

	      (blockinherit .file.run.template))

       (block unit

	      (filecon "/usr/lib/systemd/system/irqbalance\.service.*" file
		       file_context)

	      (blockinherit .file.unit.template)))

(in file.unconfined

    (call .irqbalance.conf.conf_file_type_transition_file (typeattr))
    (call .irqbalance.run.run_file_type_transition_file (typeattr)))
