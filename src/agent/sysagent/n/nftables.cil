(block nftables

       (blockinherit .sys.agent.template)

       (allow subj self (capability (net_admin)))
       (allow subj self create_netlink_netfilter_socket)

       (call conf.manage_file_files (subj))
       (call conf.conf_file_type_transition_file (subj))

       (call tmp.manage_file_files (subj))
       (call tmp.tmp_file_type_transition_file (subj))

       (call .iproute.conf.list_file_dirs (subj))
       (call .iproute.conf.read_file_files (subj))

       (call .net.packet.relabelto_all_packets (subj))

       (call .nss.hosts.type (subj))
       (call .nss.protocols.type (subj))
       (call .nss.services.type (subj))

       (call .rbacsep.constrained.type (subj))
       (call .rbacsep.usefdsource.type (subj))

       (call .sys.modulerequest_subj_system (subj))

       (block conf

	      (filecon "/etc/nftables\.conf" file file_context)
	      (filecon "/etc/nftables\.conf\..*" file file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file file "nftables.conf")))

	      (blockinherit .file.conf.base_template)
	      (blockinherit .file.macro_template_files))

       (block exec

	      (filecon "/usr/bin/nft" file file_context))

       (block tmp

	      (macro tmp_file_type_transition_file ((type ARG1))
		     (call .tmp.file_type_transition
			   (ARG1 file file "*")))

	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.tmp.base_template))

       (block unit

	      (filecon "/usr/lib/systemd/system/nftables\.service.*" file
		       file_context)

	      (blockinherit .file.unit.template)))

(in file.unconfined

    (call .nftables.conf.conf_file_type_transition_file (typeattr)))
