(block certbot

       (blockinherit .sys.agent.template)

       (allow subj self create_tcp_stream_socket)

       (call common.type (subj))

       (call conf.manage_file_dirs (subj))
       (call conf.manage_file_files (subj))
       (call conf.manage_file_lnk_files (subj))

       (call hook.signal_subj_processes (subj))
       (call hook.subj_type_transition (subj))

       (call log.manage_file_files (subj))
       (call log.readwrite_file_dirs (subj))

       (call state.manage_file_files (subj))
       (call state.readwrite_file_dirs (subj))

       (call tmp.manage_file_dirs (subj))
       (call tmp.manage_file_files (subj))
       (call tmp.tmp_file_type_transition_file (subj dir))
       (call tmp.tmp_file_type_transition_file (subj file))

       (call .cert.read_file_files (subj))
       (call .cert.traverse_file_pattern.type (subj))

       (call .cgroup.getattr_fs_pattern.type (subj))

       (call .exec.list_file_dirs (subj))
       (call .exec.mapexecute_file_files (subj))
       (call .exec.read_file_files (subj))

       (call .http.https.nameconnect_port_tcp_sockets (subj))
       (call .http.namebind_port_tcp_sockets (subj))
       (call .http.nameconnect_port_tcp_sockets (subj))

       (call .inputrc.read_file_pattern.type (subj))

       (call .ldconfig.exec.execute_file_files (subj))

       (call .log.search_file_pattern.type (subj))

       (call .mime.read_file_pattern.type (subj))

       (call .net.nodebind_netnode_tcp_sockets (subj))

       (call .nss.hosts.type (subj))

       (call .osrelease.read_sysctlfile_pattern.type (subj))

       (call .rbacsep.constrained.type (subj))
       (call .rbacsep.usefdsource.type (subj))

       (call .tmp.deletename_file_dirs (subj))

       (optional certbot_websysfile
		 (call .sys.web.ro.manage_file_dirs (subj))
		 (call .sys.web.ro.manage_file_files (subj))
		 (call .sys.web.ro.manage_file_lnk_files (subj)))

       (block common

	      (macro type ((type ARG1))
		     (typeattributeset typeattr ARG1))

	      (typeattribute typeattr)

	      (allow subj self create_unix_dgram_socket)

	      (call .crypto.read_sysctlfile_pattern.type (typeattr))

	      (call .locale.data.map_file_pattern.type (typeattr))
	      (call .locale.read_file_pattern.type (typeattr))

	      (call .nss.passwdgroup.type (typeattr))

	      (call .rbacsep.constrained.type (typeattr))

	      (call .selinux.linked.type (typeattr))

	      (call .shell.exec.execute_file_files (typeattr))

	      (call .state.search_file_pattern.type (typeattr))

	      (call .systemd.journal.relay_msgs.type (typeattr))

	      (call .terminfo.conf.read_file_pattern.type (typeattr))
	      (call .terminfo.data.read_file_pattern.type (typeattr)))

       (block conf

	      (filecon "/etc/letsencrypt" dir file_context)
	      (filecon "/etc/letsencrypt/.*" any file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file dir "letsencrypt")))

	      (blockinherit .file.conf.template))

       (block exec

	      (filecon "/usr/bin/certbot-.*" file file_context))

       (block hook

	      (blockinherit .sys.agent.template)

	      (allow subj self (capability (dac_read_search fsetid)))
	      (dontaudit subj self (capability (sys_resource)))

	      (call common.type (subj))

	      (call conf.list_file_dirs (subj))
	      (call conf.read_file_files (subj))
	      (call conf.read_file_lnk_files (subj))

	      (call .caplastcap.read_sysctlfile_pattern.type (subj))

	      (call .exec.execute_file_files (subj))

	      (call .file.cert.manage_all_dirs (subj))
	      (call .file.cert.manage_all_files (subj))
	      (call .file.cert.manage_all_lnk_files (subj))

	      (call .proc.getattr_fs_pattern.type (subj))

	      (call .random.read_sysctlfile_pattern.type (subj))

	      (call .rbacsep.constrained.type (subj))
	      (call .rbacsep.usefdsource.type (subj))

	      (call .sys.read_subj_states (subj))

	      (call .systemd.askpassword.client.type (subj))

	      (call .systemd.private.type (subj))

	      (call .systemd.systemctl.exec.execute_file_files (subj))

	      (call .xattr.getattr_fs_pattern.type (subj))

	      (optional certbot_hook_apache
			(call .apache.unit.start_file_services (subj))
			(call .apache.unit.status_file_services (subj)))

	      (optional certbot_hook_dovecot
			(call .dovecot.unit.start_file_services (subj))
			(call .dovecot.unit.status_file_services (subj)))

	      (optional certbot_hook_polkit
			(call .polkit.ttyagent.subj_type_transition (subj)))

	      (optional certbot_hook_postfix
			(call .postfix.unit.start_file_services (subj))
			(call .postfix.unit.status_file_services (subj)))

	      (optional certbot_hook_znc
			(call .znc.unit.start_file_services (subj))
			(call .znc.unit.status_file_services (subj)))

	      (block exec

		     (filecon "/usr/bin/certbot_hook" file file_context)))

       (block log

	      (filecon "/var/log/letsencrypt" dir file_context)
	      (filecon "/var/log/letsencrypt/.*" any file_context)

	      (macro log_file_type_transition_file ((type ARG1))
		     (call .log.file_type_transition
			   (ARG1 file dir "letsencrypt")))

	      (blockinherit .file.macro_template_dirs)
	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.log.base_template))

       (block state

	      (filecon "/var/lib/letsencrypt" dir file_context)
	      (filecon "/var/lib/letsencrypt/.*" any file_context)

	      (macro state_file_type_transition_file ((type ARG1))
		     (call .state.file_type_transition
			   (ARG1 file dir "letsencrypt")))

	      (blockinherit .file.state.template))

       (block tmp

	      (macro tmp_file_type_transition_file ((type ARG1)(class ARG2))
		     (call .tmp.file_type_transition
			   (ARG1 file ARG2 "*")))

	      (blockinherit .file.macro_template_dirs)
	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.tmp.base_template))

       (block unit

	      (filecon "/usr/lib/systemd/system/certbot\.service.*" file
		       file_context)
	      (filecon "/usr/lib/systemd/system/certbot\.timer.*" file
		       file_context)

	      (blockinherit .file.unit.template)))

(in file.unconfined

    (call .certbot.conf.conf_file_type_transition_file (typeattr))
    (call .certbot.log.log_file_type_transition_file (typeattr))
    (call .certbot.state.state_file_type_transition_file (typeattr)))
