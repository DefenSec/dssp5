(block consolesetup

       (blockinherit .sys.agent.template)

       (call setupcon.exec.execute_file_files (subj))

       (call .kbd.subj_type_transition (subj))

       (call .rbacsep.constrained.type (subj))
       (call .rbacsep.usefdsource.type (subj))

       (block conf

	      (filecon "/etc/console-setup" dir file_context)
	      (filecon "/etc/console-setup/.*" any file_context)

	      (filecon "/etc/default/console-setup" file file_context)
	      (filecon "/etc/default/console-setup\..*" file file_context)
	      (filecon "/etc/default/keyboard" file file_context)
	      (filecon "/etc/default/keyboard\..*" file file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file dir "console-setup"))
		     (call .conf.file_type_transition
			   (ARG1 file file "console-setup"))
		     (call .conf.file_type_transition
			   (ARG1 file file "keyboard")))

	      (blockinherit .file.conf.template))

       (block exec

	      (filecon "/usr/lib/console-setup/console-setup\.sh" file
		       file_context)
	      (filecon "/usr/lib/console-setup/keyboard-setup\.sh" file
		       file_context))

       (block run

	      (filecon "/run/console-setup" dir file_context)
	      (filecon "/run/console-setup/.*" any file_context)

	      (macro run_file_type_transition_file ((type ARG1))
		     (call .run.file_type_transition
			   (ARG1 file dir "console-setup")))

	      (blockinherit .file.macro_template_dirs)
	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.run.base_template))

       (block unit

	      (filecon "/usr/lib/systemd/system/console-setup\.service.*" file
		       file_context)
	      (filecon "/usr/lib/systemd/system/keyboard-setup\.service.*" file
		       file_context)

	      (blockinherit .file.unit.template)))

(in file.unconfined

    (call .consolesetup.conf.conf_file_type_transition_file (typeattr))
    (call .consolesetup.run.run_file_type_transition_file (typeattr)))

(in kbd

    (call .consolesetup.conf.read_file_files (subj))
    (call .consolesetup.conf.search_file_dirs (subj)))

(in systemd.udev

    (call .consolesetup.conf.execute_file_files (subj))
    (call .consolesetup.conf.search_file_dirs (subj))

    (call .consolesetup.run.manage_file_dirs (subj))
    (call .consolesetup.run.manage_file_files (subj))
    (call .consolesetup.run.run_file_type_transition_file (subj)))
