(block alsa

       (block conf

	      (filecon "/etc/asound\.conf" file file_context)
	      (filecon "/etc/asound\.conf\..*" file file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file file "asound.conf")))

	      (blockinherit .file.conf.base_template)
	      (blockinherit .file.macro_template_files))

       (block data

	      (filecon "/usr/share/alsa" dir file_context)
	      (filecon "/usr/share/alsa/.*" any file_context)

	      (filecon "/usr/share/alsa-card-profile" dir file_context)
	      (filecon "/usr/share/alsa-card-profile/.*" any file_context)

	      (macro data_file_type_transition_file ((type ARG1))
		     (call .data.file_type_transition
			   (ARG1 file dir "alsa"))
		     (call .data.file_type_transition
			   (ARG1 file dir "alsa-card-profile")))

	      (blockinherit .file.data.base_template)
	      (blockinherit .file.macro_template_dirs)
	      (blockinherit .file.macro_template_files)))

(in file.unconfined

    (call .alsa.conf.conf_file_type_transition_file (typeattr))
    (call .alsa.data.data_file_type_transition_file (typeattr)))
