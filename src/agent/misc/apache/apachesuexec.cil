(in apache

    (block suexec

	   (blockinherit .sys.agent.template)

	   (allow subj self (capability (setgid setuid)))
	   (allow subj self create_unix_dgram_socket)

	   (call log.append_file_files (subj))
	   (call log.create_file_files (subj))
	   (call log.apache_log_file_type_transition_file (subj))

	   (call apache.log.append_file_files (subj))
	   (call apache.server.readwrite_subj_unix_stream_sockets (subj))

	   (call .crypto.read_sysctlfile_pattern.type (subj))

	   (call .exec.mapexecute_file_files (subj))
	   (call .exec.read_file_files (subj))

	   (call .file.content.user.web.getattr_all_files (subj))
	   (call .file.content.user.web.list_all_dirs (subj))
	   (call .file.content.user.web.read_all_lnk_files (subj))
	   (call .file.content.user.web.script.signal_all_processes (subj))

	   (call .locale.data.map_file_pattern.type (subj))
	   (call .locale.read_file_pattern.type (subj))

	   (call .log.search_file_pattern.type (subj))

	   (call .ngroupsmax.read_sysctlfile_pattern.type (subj))

	   (call .nss.passwdgroup.type (subj))

	   (call .random.read_sysctlfile_pattern.type (subj))

	   (call .selinux.linked.type (subj))

	   (call .shell.exec.mapexecute_file_files (subj))
	   (call .shell.exec.read_file_files (subj))

	   (call .systemd.journal.relay_msgs.type (subj))

	   (call .user.home.search_file_pattern.type (subj))

	   (call .user.web.script.subj_type_transition (subj))

	   (block exec

		  (filecon "/usr/lib/apache2/suexec-pristine" file
			   file_context))

	   (block log

		  (filecon "/var/log/apache2/suexec\.log" file file_context)
		  (filecon "/var/log/apache2/suexec\.log\..*" file file_context)

		  (macro apache_log_file_type_transition_file ((type ARG1))
			 (call .apache.log.file_type_transition
			       (ARG1 file file "suexec.log")))

		  (blockinherit .file.log.apache.base_template)
		  (blockinherit .file.macro_template_files))))
