(block avahi

       (block conf

	      (filecon "/etc/avahi" dir file_context)
	      (filecon "/etc/avahi/.*" any file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file dir "avahi")))

	      (blockinherit .file.conf.template)))

(in file.unconfined

    (call .avahi.conf.conf_file_type_transition_file (typeattr)))
