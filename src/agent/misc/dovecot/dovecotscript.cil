(in dovecot

    (block script

	   (blockinherit .agent.template)

	   (call dovecot.agent (subj exec.file))

	   (call .rbacsep.constrained.type (subj))
	   (call .rbacsep.usefdsource.type (subj))

	   (block exec

		  (filecon "/usr/lib/dovecot/script" file file_context))

	   (block login

		  (blockinherit .agent.template)

		  (call dovecot.agent (subj exec.file))

		  (call .rbacsep.constrained.type (subj))
		  (call .rbacsep.usefdsource.type (subj))

		  (block exec

			 (filecon "/usr/lib/dovecot/script-login" file
				  file_context)))))
