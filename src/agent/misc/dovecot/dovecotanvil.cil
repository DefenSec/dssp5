(in dovecot

    (block anvil

	   (blockinherit .agent.template)

	   (call agent (subj exec.file))
	   (call unix_stream_connect (subj))

	   (call .rbacsep.constrained.type (subj))
	   (call .rbacsep.usefdsource.type (subj))

	   (block exec

		  (filecon "/usr/lib/dovecot/anvil" file file_context))))
