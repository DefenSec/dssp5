(block rdisc

       (blockinherit .sys.agent.template)

       (block conf

	      (filecon "/etc/sysconfig/rdisc" file file_context)
	      (filecon "/etc/sysconfig/rdisc\..*" file file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file file "rdisc")))

	      (blockinherit .file.conf.base_template)
	      (blockinherit .file.macro_template_files))

       (block exec

	      (filecon "/usr/bin/rdisc" file file_context))

       (block unit

	      (filecon "/usr/lib/systemd/system/rdisc\.service.*" file
		       file_context)

	      (blockinherit .file.unit.template)))

(in file.unconfined

    (call .rdisc.conf.conf_file_type_transition_file (typeattr)))
