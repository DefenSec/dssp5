(block xkb

       (block data

	      (filecon "/usr/share/X11/xkb" dir file_context)
	      (filecon "/usr/share/X11/xkb/.*" any file_context)

	      (macro data_file_type_transition_file ((type ARG1))
		     (call .data.file_type_transition
			   (ARG1 file dir "xkb")))

	      (macro map_file_files ((type ARG1))
		     (allow ARG1 file (file (map))))

	      (blockinherit .file.macro_template_dirs)
	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.data.base_template))

       (block state

	      (filecon "/var/lib/xkb" dir file_context)
	      (filecon "/var/lib/xdb" any file_context)

	      (macro state_file_type_transition_file ((type ARG1))
		     (call .state.file_type_transition
			   (ARG1 file dir "xkb")))

	      (blockinherit .file.macro_template_dirs)
	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.state.base_template)))

(in file.unconfined

    (call .xkb.data.data_file_type_transition_file (typeattr))
    (call .xkb.state.state_file_type_transition_file (typeattr)))
