(block mesa

       (block data

	      (filecon "/usr/share/drirc\.d" dir file_context)
	      (filecon "/usr/share/drirc\.d/.*" any file_context)

	      (macro data_file_type_transition_file ((type ARG1))
		     (call .data.file_type_transition
			   (ARG1 file dir "drirc.d")))

	      (blockinherit .file.macro_template_dirs)
	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.data.base_template))

       (block home

	      (block cache

		     (filecon "HOME_DIR/\.cache/mesa_shader_cache" dir
			      file_context)
		     (filecon "HOME_DIR/\.cache/mesa_shader_cache/.*" any
			      file_context)

		     (macro map_file_files ((type ARG1))
			    (allow ARG1 file (file (map))))

		     (macro user_home_cache_file_type_transition_file
			    ((type ARG1))
			    (call .user.home.cache.file_type_transition
				  (ARG1 file dir "mesa_shader_cache")))

		     (blockinherit .file.user.home.cache.template))))

(in file.unconfined

    (call .mesa.data.data_file_type_transition_file (typeattr))
    (call .mesa.home.cache.user_home_cache_file_type_transition_file
	  (typeattr)))

(in user

    (call .mesa.home.cache.manage_file_dirs (subj))
    (call .mesa.home.cache.manage_file_files (subj))
    (call .mesa.home.cache.map_file_files (subj))
    (call .mesa.home.cache.relabel_file_dirs (subj))
    (call .mesa.home.cache.relabel_file_files (subj))
    (call .mesa.home.cache.user_home_cache_file_type_transition_file (subj)))
