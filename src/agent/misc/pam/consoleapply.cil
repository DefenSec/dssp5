(block consoleapply

       (blockinherit .sys.agent.template)

       (call .rbacsep.constrained.type (subj))
       (call .rbacsep.usefdsource.type (subj))

       (block exec

	      (filecon "/usr/bin/pam_console_apply" file file_context))

       (block run

	      (filecon "/run/console" dir file_context)
	      (filecon "/run/console/.*" any file_context)

	      (filecon "/run/console-unlocked" file file_context)
	      (filecon "/run/console-unlocked\..*" file file_context)

	      (macro run_file_type_transition_file ((type ARG1))
		     (call .run.file_type_transition
			   (ARG1 file dir "console"))
		     (call .run.file_type_transition
			   (ARG1 file file "console-unlocked")))

	      (blockinherit .file.macro_template_dirs)
	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.run.base_template)))

(in file.unconfined

    (call .consoleapply.run.run_file_type_transition_file (typeattr)))
