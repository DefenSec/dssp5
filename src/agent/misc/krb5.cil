(in file.unconfined

    (call .krb5.conf.conf_file_type_transition_file (typeattr))
    (call .krb5.gss.conf_file_type_transition_file (typeattr))
    (call .krb5.var.var_file_type_transition_file (typeattr)))

(in krb5

    (block conf

	   (filecon "/etc/krb5\.conf" file file_context)
	   (filecon "/etc/krb5\.conf\..*" file file_context)
	   (filecon "/etc/krb5\.conf\.d" dir file_context)
	   (filecon "/etc/krb5\.conf\.d/.*" any file_context)

	   (macro conf_file_type_transition_file ((type ARG1))
		  (call .conf.file_type_transition
			(ARG1 file dir "krb5.conf.d"))
		  (call .conf.file_type_transition
			(ARG1 file file "krb5.conf")))

	   (blockinherit .file.conf.krb5.template))

    (block gss

	   (filecon "/etc/gss" dir file_context)
	   (filecon "/etc/gss/.*" any file_context)

	   (macro conf_file_type_transition_file ((type ARG1))
		  (call .conf.file_type_transition
			(ARG1 file dir "gss")))

	   (blockinherit .file.conf.krb5.template))

    (block var

	   (filecon "/var/kerberos" dir file_context)
	   (filecon "/var/kerberos/.*" any file_context)

	   (macro var_file_type_transition_file ((type ARG1))
		  (call .var.file_type_transition
			(ARG1 file dir "kerberos")))

	   (blockinherit .file.macro_template_dirs)
	   (blockinherit .file.macro_template_files)
	   (blockinherit .file.var.base_template)))

(in file.conf

    (block krb5

	   (macro type ((type ARG1))
		  (typeattributeset typeattr ARG1))

	   (blockinherit file.all_macro_template_dirs)
	   (blockinherit file.all_macro_template_files)
	   (blockinherit file.all_macro_template_lnk_files)

	   (typeattribute typeattr)

	   (call file.conf.type (typeattr))

	   (block base_template

		  (blockabstract base_template)

		  (blockinherit .file.conf.base_template)

		  (call .file.conf.krb5.type (file)))

	   (block template

		  (blockabstract template)

		  (blockinherit .file.conf.krb5.base_template)
		  (blockinherit .file.macro_template_dirs)
		  (blockinherit .file.macro_template_files)
		  (blockinherit .file.macro_template_lnk_files))))
