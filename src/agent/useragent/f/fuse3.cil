(block fuse3

       (blockinherit .user.agent.template)

       (allow subj self (capability (dac_read_search sys_admin)))

       (call conf.read_file_files (subj))

       (call .debug.search_fs_pattern.type (subj))

       (call .fuse.mount_fs (subj))
       (call .fuse.unmount_fs (subj))

       (call .fuse.readwrite_stordev_chr_files (subj))

       (call .media.home.mounton_file_dirs (subj))
       (call .media.home.readwrite_file_dirs (subj))

       (call .nss.passwdgroup.type (subj))

       (call .stordev.readwrite.type (subj))

       (call .sys.modulerequest_system (subj))

       (call .tmp.getattr_fs_pattern.type (subj))
       (call .tmp.search_file_pattern.type (subj))

       (call .trace.search_fs_pattern.type (subj))

       (call .xattr.getattr_fs_pattern.type (subj))

       (block conf

	      (filecon "/etc/fuse\.conf" file file_context)
	      (filecon "/etc/fuse\.conf\..*" file file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file file "fuse.conf")))

	      (blockinherit .file.conf.base_template)
	      (blockinherit .file.macro_template_files))

       (block exec

	      (filecon "/usr/bin/fusermount3" file file_context)))

(in file.unconfined

    (call .fuse3.conf.conf_file_type_transition_file (typeattr)))

(in user

    (call .fuse3.role (role)))

(in wheel

    (call .fuse3.role (role)))
