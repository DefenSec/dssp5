(block random

       (filecon "/dev/random" char nodedev_context)
       (filecon "/dev/urandom" char nodedev_context)

       (macro dev_file_type_transition_nodedev ((type ARG1))
	      (call .dev.file_type_transition
		    (ARG1 nodedev chr_file "random"))
	      (call .dev.file_type_transition
		    (ARG1 nodedev chr_file "urandom")))

       (blockinherit .nodedev.template)

       (call .rbacsep.exempt.obj.type (nodedev)))
