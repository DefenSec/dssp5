(block resolv

       (block conf

	      (filecon "/etc/\.resolv\.conf" file file_context)
	      (filecon "/etc/\.resolv\.conf\..*" file file_context)
	      (filecon "/etc/\.resolv-secure\.conf" file file_context)
	      (filecon "/etc/\.resolv-secure\.conf\..*" file file_context)
	      (filecon "/etc/resolv\.conf" file file_context)
	      (filecon "/etc/resolv\.conf\..*" file file_context)
	      (filecon "/etc/resolv-secure\.conf" file file_context)
	      (filecon "/etc/resolv-secure\.conf\..*" file file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file file ".resolv.conf"))
		     (call .conf.file_type_transition
			   (ARG1 file file ".resolv-secure.conf"))
		     (call .conf.file_type_transition
			   (ARG1 file file "resolv.conf"))
		     (call .conf.file_type_transition
			   (ARG1 file file "resolv-secure.conf")))

	      (blockinherit .file.conf.base_template)
	      (blockinherit .file.macro_template_files)))

(in file.unconfined

    (call .resolv.conf.conf_file_type_transition_file (typeattr)))
