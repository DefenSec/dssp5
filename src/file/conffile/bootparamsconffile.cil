(block bootparams

       (filecon "/etc/bootparams" file file_context)
       (filecon "/etc/bootparams\..*" file file_context)

       (macro conf_file_type_transition_file ((type ARG1))
	      (call .conf.file_type_transition
		    (ARG1 file file "bootparams")))

       (blockinherit .file.conf.base_template)
       (blockinherit .file.macro_template_files))

(in file.unconfined

    (call .bootparams.conf_file_type_transition_file (typeattr)))
