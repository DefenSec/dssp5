(block libcmrt

       (block conf

	      (filecon "/etc/cmrt\.conf" file file_context)
	      (filecon "/etc/cmrt\.conf\..*" file file_context)

	      (macro conf_file_type_transition_file ((type ARG1))
		     (call .conf.file_type_transition
			   (ARG1 file file "cmrt.conf")))

	      (blockinherit .file.conf.base_template)
	      (blockinherit .file.macro_template_files)))

(in file.unconfined

    (call .libcmrt.conf.conf_file_type_transition_file (typeattr)))
