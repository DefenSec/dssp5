(in file.unconfined

    (call .inputrc.home.user_home_file_type_transition_file (typeattr)))

(in inputrc

    (block home

	      (filecon "HOME_DIR/\.inputrc" file file_context)
	      (filecon "HOME_DIR/\.inputrc\..*" file file_context)

	      (macro user_home_file_type_transition_file ((type ARG1))
		     (call .user.home.file_type_transition
			   (ARG1 file file ".inputrc")))

	      (blockinherit .file.macro_template_files)
	      (blockinherit .file.user.home.base_template)))

(in user

    (call .inputrc.home.manage_file_files (subj))
    (call .inputrc.home.relabel_file_files (subj))
    (call .inputrc.home.user_home_file_type_transition_file (subj)))
