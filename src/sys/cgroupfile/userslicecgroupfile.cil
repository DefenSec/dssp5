(in user

    (block slice

	   (genfscon "cgroup2" "/user.slice" cgroupfile_context)

	   (macro watch_cgroupfile_files ((type ARG1))
		  (allow ARG1 cgroupfile (file (watch))))

	   (blockinherit .cgroupfile.macro_template_dirs)
	   (blockinherit .cgroupfile.template)))
